<Window x:Class="Pactometro.VentanaAgregar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pactometro"
        mc:Ignorable="d"
        Title="VentanaAgregar" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tipo de Proceso Electoral -->
        <Label Content="Tipo de Proceso Electoral:"/>
        <ComboBox Grid.Row="0" Width="200" Margin="10" Name="cmbTipoProceso">
            <ComboBoxItem Content="Elecciones Generales"/>
            <ComboBoxItem Content="Elecciones Autonómicas"/>
        </ComboBox>

        <!-- Fecha -->
        <Label Grid.Row="1" Content="Fecha:"/>
        <DatePicker Grid.Row="1" Width="200" Margin="10" Name="dpFecha"/>

        <!-- Número de Escaños -->
        <Label Grid.Row="2" Content="Número de Escaños:"/>
        <TextBox Grid.Row="2" Width="200" Margin="10" Name="txtNumEscaños"/>
    </Grid>
</Window>
