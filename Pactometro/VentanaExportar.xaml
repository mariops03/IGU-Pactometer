<Window x:Class="Pactometro.VentanaExportar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Opciones de Exportación" Height="300" Width="300">
    <StackPanel>
        <ComboBox x:Name="formatComboBox" Margin="10">
            <ComboBoxItem Content="PNG" />
            <ComboBoxItem Content="JPEG" />
            <ComboBoxItem Content="BMP" />
            <ComboBoxItem Content="GIF" />
            <ComboBoxItem Content="TIFF" />
        </ComboBox>
        <Slider x:Name="qualitySlider" Margin="10" Minimum="0" Maximum="100" />
        <Button Content="Exportar" Click="ExportButton_Click" Margin="10"/>
    </StackPanel>
</Window>
