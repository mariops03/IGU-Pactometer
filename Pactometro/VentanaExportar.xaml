<Window x:Class="Pactometro.VentanaExportar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Opciones de Exportación" Height="400" Width="300">
    <StackPanel>
        <Label Content="FORMATO:" Margin="10,10,0,0"/>
        <ComboBox x:Name="formatComboBox" Margin="10" SelectionChanged="FormatComboBox_SelectionChanged">
            <ComboBoxItem Content="PNG" />
            <ComboBoxItem Content="JPG" />
        </ComboBox>

        <!-- Panel para las opciones de calidad -->
        <StackPanel x:Name="qualityOptionsPanel" Visibility="Collapsed">
            <Label Content="CALIDAD:" Margin="10"/>
            <RadioButton x:Name="radioButtonLow" Content="Baja" Margin="10" />
            <RadioButton x:Name="radioButtonMedium" Content="Media" Margin="10" />
            <RadioButton x:Name="radioButtonHigh" Content="Alta" Margin="10" IsChecked="True" />
        </StackPanel>

        <Button Content="Exportar" Click="ExportButton_Click" Margin="10"/>
        <Button Content="Copiar al Portapapeles (PNG)" Click="CopyToClipboard_Click" Margin="10"/>
    </StackPanel>
</Window>
