<Window x:Class="Pactometro.VentanaSecundaria"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pactometro"
        mc:Ignorable="d"
        Title="VentanaSecundaria" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ListView Name="mainTable" Grid.Row="0" Margin="15" SelectionChanged="mainTable_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ELECCIÓN" DisplayMemberBinding="{Binding nombre}"/>
                    <GridViewColumn Header="FECHA" DisplayMemberBinding="{Binding fecha}"/>
                    <GridViewColumn Header="NUMERO DE ESCAÑOS" DisplayMemberBinding="{Binding numEscaños}"/>
                    <GridViewColumn Header="MAYORÍA ABSOLUTA" DisplayMemberBinding="{Binding mayoriaAbsoluta}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView Name="secondaryTable" Grid.Row="1" Margin="15">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="PARTIDO" Width="100" DisplayMemberBinding="{Binding nombre}"/>
                    <GridViewColumn Header="ESCAÑOS" Width="100" DisplayMemberBinding="{Binding escaños}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
